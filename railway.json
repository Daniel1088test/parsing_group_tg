{
  "$schema": "https://railway.app/railway.schema.json",
  
  "_comment": "IMPORTANT: Make sure to set DATABASE_URL in Railway dashboard!",
  
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "**"
    ],
    "nixpacksConfigPath": "",
    "buildCommand": "echo 'Building the project...'"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "bash start-railway.sh",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  },
  "healthcheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 5,
    "gracePeriod": 120
  },
  "lifecycle": {
    "preStop": {
      "command": "echo 'Stopping the services...'; ps -ef | grep -E 'run_bot.py|run_parser.py' | grep -v grep | awk '{print $2}' | xargs -r kill -15"
    }
  },
  "autoscaling": {
    "enabled": false
  },
  "mounts": [
    {
      "path": "/app/data/sessions",
      "stickySession": true
    },
    {
      "path": "/app/media",
      "stickySession": true
    }
  ],
  "plugins": {
    "postgresql": {
      "version": "latest"
    }
  },
  "volumes": [
    {
      "name": "db-backups",
      "mountPath": "/app/db_backups",
      "description": "Volume for database backups"
    }
  ],
  "services": [
    {
      "id": "app",
      "name": "parsing-app",
      "description": "Main parser application"
    },
    {
      "id": "postgres",
      "name": "database",
      "description": "PostgreSQL database",
      "type": "postgres",
      "plan": "free"
    }
  ],
  "shared": {
    "DATABASE_URL": "${postgres.DATABASE_URL}"
  },
  "variables": {
    "PUBLIC_URL": "https://parsinggrouptg-production.up.railway.app",
    "RAILWAY_PUBLIC_DOMAIN": "parsinggrouptg-production.up.railway.app",
    "DEBUG": "false",
    "ALLOWED_HOSTS": "parsinggrouptg-production.up.railway.app,*.railway.app,localhost,127.0.0.1"
  }
} 