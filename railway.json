{
  "$schema": "https://railway.app/railway.schema.json",
  
  "_comment": "IMPORTANT: Make sure to set DATABASE_URL in Railway dashboard!",
  
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "**"
    ],
    "nixpacksConfigPath": ""
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "bash start-railway.sh",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  },
  "plugins": {
    "postgresql": {
      "version": "latest"
    }
  },
  "volumes": [
    {
      "name": "db-backups",
      "mountPath": "/app/db_backups",
      "description": "Volume for database backups"
    }
  ],
  "services": [
    {
      "id": "app",
      "name": "parsing-app",
      "description": "Main parser application"
    },
    {
      "id": "postgres",
      "name": "database",
      "description": "PostgreSQL database",
      "type": "postgres",
      "plan": "free"
    }
  ],
  "shared": {
    "DATABASE_URL": "${postgres.DATABASE_URL}"
  },
  "variables": {
    "PUBLIC_URL": "https://parsinggrouptg-production.up.railway.app",
    "RAILWAY_PUBLIC_DOMAIN": "parsinggrouptg-production.up.railway.app"
  }
} 